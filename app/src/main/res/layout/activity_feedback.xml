<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f04a3a"
    android:orientation="vertical"
    tools:context=".FeedbackActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/innerMargin"
        android:padding="@dimen/innerPad"
        android:text="@string/reviewTxt"
        android:textColor="@color/txtColor"
        android:textSize="22sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/placeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/innerMargin"
        android:padding="@dimen/innerPad"
        android:text="@string/placeTxt"
        android:textColor="@color/txtColor"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0sp"
        android:layout_weight="4"
        android:background="@drawable/cafe"
        android:contentDescription="@string/imageDesc"
        android:layout_margin="@dimen/innerMargin"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/innerMargin"
        android:padding="@dimen/innerPad">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:text="@string/ratingTxt"
            android:textColor="@color/txtColor"
            android:textSize="22sp"
            android:textStyle="bold"/>
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/ratingStars"
            android:numStars="5"
            android:stepSize="1.0"
            android:rating="3.0" />
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="2"
        android:background="@color/txtColor"
        android:textColor="@color/btnTxtColor"
        android:id="@+id/reviewButton"
        android:hint="@string/reviewHint"
        android:textSize="24sp"
        android:layout_margin="@dimen/buttonMargin"
        android:padding="@dimen/innerPad"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="2"
        android:background="@color/txtColor"
        android:layout_margin="@dimen/buttonMargin"
        android:text="@string/submitBtn"
        android:textSize="24sp"
        android:id="@+id/submitButton"
        />
</LinearLayout>