<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        android:text="User Name :"
        android:textStyle="bold"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/name"
        android:layout_marginTop="25dp"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        android:text="Charan"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/textviewreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:text="Review : "
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textviewreview"
        android:layout_marginStart="16sp"
        android:layout_below="@id/name_txt"
        android:layout_marginTop="10dp"
        android:text="Good Resturant!!"
        android:textSize="20sp"
      />

   <RatingBar
       android:id="@+id/ratingBarList"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="10dp"
       android:layout_marginStart="20dp"
       android:isIndicator="true"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@id/textReview"
       android:progressTint="@color/colorAccent"
       />
    <TextView
        android:id="@+id/date"
        android:layout_below="@id/ratingBarList"
        android:layout_width="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Posted Date : "
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/dateTxt"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/date"
        android:layout_below="@id/ratingBarList"
        android:layout_width="wrap_content"
        android:layout_marginBottom="10dp"
        android:textSize="16sp"
        android:text="01/04/2019"
        android:layout_height="wrap_content" />


</RelativeLayout>